	"license": "MIT",
	"repository": "https://github.com/Verthon/vitest-offline",
	"devDependencies": {
		"@arethetypeswrong/cli": "0.15.4",
		"@types/node": "20.12.7",
		"typescript": "5.5.4"
	},
	"dependencies": {
		"fetch-mock": "11.1.3",
		"undici": "6.19.8"
	},
	"peerDependencies": {
    "vitest": "^1.0.0 || ^2.0.0"
  }
}
