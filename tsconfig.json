{
	"compilerOptions": {
		/* Base Options: */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"isolatedModules": true,
		/* Strictness */
		"strict": true,
		"noUncheckedIndexedAccess": true,
		/* If transpiling with TypeScript: */
		"module": "NodeNext",
		"outDir": "dist",
		"sourceMap": true,
		/* AND if you're building for a library: */
		"declaration": true,
		"declarationMap": true,
		"lib": ["es2022"]
	}
}
